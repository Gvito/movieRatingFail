{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block pageTitle %}<h1 class=" mb-5">Accueil</h1>{% endblock %}

{% block main %}
<div class="card-columns">
  {% for m in ms %}
  <div class="card w-100">
    <img class="card-img-top" style="height: 250px; width: 100%; display: block;" src="https://lorempixel.com/540/370/" alt="">
    <div class="card-body">
      <h5 class="card-title">{{ m.title }}</h5>
      <p class="card-text text-truncate">{{ m.sumary}}</p>
      <a href="{{ path("app_rate", {"id" : m.id})}}" class="btn btn-primary">Evaluer</a>
      <a href="{{ path("app_show", {"id" : m.id})}}" class="btn btn-primary">Voir</a>
    </div>
  </div>
  {% endfor %}
</div>

